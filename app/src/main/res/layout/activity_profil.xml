<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/p1"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFIL"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/p2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/p1"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tedi" />

    <TextView
        android:id="@+id/p3"
        android:layout_below="@id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tedi Tian Sukma\n1167050156\nGang Kujang Kec.Cibiru Bangdung Kota\nIG @tian_0_0_3\n085797266730"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/dial"
        android:layout_below="@id/p3"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onDialButton"
        android:background="@drawable/phone"/>

    <Button
        android:id="@+id/lokasi"
        android:layout_below="@id/p3"
        android:layout_toRightOf="@id/dial"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="open"
        android:background="@drawable/lokasi"/>

    <Button
        android:id="@+id/FB"
        android:layout_below="@id/p3"
        android:layout_toRightOf="@id/lokasi"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/fb"/>

</RelativeLayout>